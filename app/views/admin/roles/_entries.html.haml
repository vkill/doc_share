%table.zebra-striped
  %thead
    %tr
      %th= sort_link q, :id
      %th= sort_link q, :name
      %th= sort_link q, :code
      %th= sort_link q, :created_at
      %th= sort_link q, :updated_at
      %th
  %tbody
    - collection.each do |role|
      %tr
        %td= role.id
        %td= role.name
        %td= role.code
        %td= time_ago role.created_at
        %td= time_ago role.updated_at
        %td
          = link_to t(:show), [:admin, role], :title => t(:show)
          = link_to t(:edit), [:edit, :admin, role], :title => t(:edit)
          = link_to t(:delete), [:delete, :admin, role], :title => t(:delete)