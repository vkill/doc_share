/%header.master
%header
  .topbar{"data-dropdown" => "dropdown"}
    .topbar-inner
      .container
        %h3
          = link_to Settings.project.name, root_path

        %ul.nav
          %li
            = link_to t("admin.navigation.dashboard"), admin_dashboard_path
          %li.dropdown
            = link_to t("admin.navigation.user_about"), "javascript:void(0)", :class => "dropdown-toggle"
            %ul.dropdown-menu
              %li
                = link_to t("admin.navigation.users"), [:admin, :users]
              %li
                = link_to t("admin.navigation.roles"), [:admin, :roles]
              %li
                = link_to t("admin.navigation.messages"), [:admin, :messages]
          %li.dropdown
            = link_to t("admin.navigation.repository_about"), "javascript:void(0)", :class => "dropdown-toggle"
            %ul.dropdown-menu
              %li
                = link_to t("admin.navigation.repositories"), [:admin, :repositories]
              %li
                = link_to t("admin.navigation.categories"), [:admin, :categories]
          %li.dropdown
            = link_to t("admin.navigation.system_about"), "javascript:void(0)", :class => "dropdown-toggle"
            %ul.dropdown-menu
              %li
                = link_to t("admin.navigation.site_configs"), ""
          %li.dropdown
            = link_to t("admin.navigation.log_about"), "javascript:void(0)", :class => "dropdown-toggle"
            %ul.dropdown-menu
              %li
                = link_to t("admin.navigation.activities"), [:admin, :activities]
          %li.dropdown
            = link_to t("admin.navigation.data_about"), "javascript:void(0)", :class => "dropdown-toggle"
            %ul.dropdown-menu
              %li
                = link_to t("admin.navigation.data_export"), ""
              %li
                = link_to t("admin.navigation.data_import"), ""

        %ul.nav.secondary-nav
          %li
            = link_to t("web.topbar.root"), root_path
          %li.dropdown
            = link_to current_user.username, "javascript:void(0)", :class => "dropdown-toggle"
            %ul.dropdown-menu
              %li
                = link_to t("web.topbar.profile_center"), profile_path
              %li.divider
              %li
                = link_to t("web.topbar.user_page"), user_page_path(current_user)
          %li
            = link_to t("web.topbar.sign_out"), signout_path


