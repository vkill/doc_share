/%header.master
%header
  .topbar{"data-dropdown" => "dropdown"}
    .topbar-inner
      .container
        %h3
          = link_to SiteConfig.q(:site_name), root_path

        %ul.nav
          %li
            = link_to t(".dashboard"), admin_dashboard_path
          
          %li.dropdown
            = link_to t(".user_about"), "javascript:void(0)", :class => "dropdown-toggle"
            %ul.dropdown-menu
              %li
                = link_to t(".roles"), [:admin, :roles]
              %li
                = link_to t(".users"), [:admin, :users]
              %li
                = link_to t(".messages"), [:admin, :messages]
          
          %li.dropdown
            = link_to t(".repository_about"), "javascript:void(0)", :class => "dropdown-toggle"
            %ul.dropdown-menu
              %li
                = link_to t(".categories"), [:admin, :categories]
              %li
                = link_to t(".repositories"), [:admin, :repositories]
          
          %li.dropdown
            = link_to t(".log_about"), "javascript:void(0)", :class => "dropdown-toggle"
            %ul.dropdown-menu
              %li
                = link_to t(".activities"), [:admin, :activities]

          %li.dropdown
            = link_to t(".system_about"), "javascript:void(0)", :class => "dropdown-toggle"
            %ul.dropdown-menu
              %li
                = link_to t(".site_configs"), [:admin, :site_configs]
              %li
                = link_to t(".feedbacks"), [:admin, :feedbacks]
              %li
                = link_to t(".posts"), [:admin, :posts]
          
          %li.dropdown
            = link_to t(".data_about"), "javascript:void(0)", :class => "dropdown-toggle"
            %ul.dropdown-menu
              %li
                = link_to t(".backups_databases"), [:databases, :admin, :backups]

        %ul.nav.secondary-nav
          %li
            = link_to t("shared.topbar.root"), root_path

          %li.dropdown
            = link_to current_user.username, "javascript:void(0)", :class => "dropdown-toggle"
            %ul.dropdown-menu
              %li
                = link_to t("shared.topbar.profile_center"), edit_profile_path
              %li.divider
              %li
                = link_to t("shared.topbar.user_page"), user_page_path(current_user)
          
          %li
            = link_to t("shared.topbar.sign_out"), signout_path


