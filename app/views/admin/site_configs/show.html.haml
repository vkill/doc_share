.row
  .span14
    %p.pull-right
      = link_to t(:edit), edit_admin_site_config_path(@site_config), :class => "btn primary"

%table.zebra-striped
  %thead
    %tr
      %th= ta(SiteConfig, :key)
      %th= ta(SiteConfig, :value)
  %tbody
    - @site_config.class.settings_attrs.each do |settings_attr|
      %tr
        %td= ta(SiteConfig, settings_attr)
        %td= @site_config.send settings_attr