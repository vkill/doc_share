%h2 Repositories
.row
  - @repositories.each do |repository|
    .page-header
      .row
        .span8
          %p
          .row
            = repository.name
          %p
          .row
            = repository.describtion
        .span2
          = link_to repository.watchers_count, "#", :class => "btn large disabled", :title => "watchers"
          = link_to repository.forks_count, "#", :class => "btn large disabled", :title => "forks"
        .span1
          - if current_user.watching_repository?(repository)
            = link_to "unwatch", "#"
          - else
            = link_to "watch", "#"

.pagination
  = render 'paginator'

