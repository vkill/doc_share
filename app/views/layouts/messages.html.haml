!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
    %meta{:name => "keywords", :content => "#{Settings.web.head.meta.keywords}"}
    = csrf_meta_tag

    = favicon_link_tag
    %title #{Settings.web.head.title}

    = stylesheet_link_tag    "application"

  %body
    = render "shared/topbar"

    .container
      .row
        .span4
          .page-header
            %h2
              = link_to "new_message", [:new, :message]
          .row
            %ul.unstyled
              %li
                %h3
                  = link_to "sent_messages", [:sent, :messages]
              %li
                %h3
                  = link_to "received_messages", [:messages]
              %li
                %h3
                  = link_to "notifications", [:notifications, :messages]

        .span12
          = render "shared/flash", :flash => flash
          = yield

    = render "shared/footer"
    = javascript_include_tag "application"

