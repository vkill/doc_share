!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
    %meta{:name => "keywords", :content => "#{Settings.site_configurations.site_keywords}"}
    = csrf_meta_tag

    = favicon_link_tag
    %title #{Settings.site_configurations.site_default_title}

    = stylesheet_link_tag "application"

  %body
    = render "admin/shared/topbar"

    .container
      = render "shared/flash", :flash => flash
      = render "admin/shared/breadcrumbs"
      = yield
    
    = render "shared/javascripts"
    = render "shared/footer"
    = render "shared/modals_and_popovers"
    

