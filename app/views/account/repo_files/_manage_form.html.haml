.row
  .span16
    #jquery_fileupload_repo
      = simple_form_for(url, :wrapper => :inline) do |f|
        = hidden_field_tag :format, 'json'
                      
        .row
          .span16.fileupload-buttonbar
            .progressbar.fileupload-progressbar
              %div{:style => "width:0%;"}
            %span.btn.success.fileinput-button
              %span= t(".add_files")
              %input{:multiple => "", :name => "repo_file[repo_file]", :type => "file"}
            %button.btn.primary.start{:type => "submit"}= t(".start_upload_files")
            %button.btn.info.cancel{:type => "reset"}= t(".cancel_files")
            %button.btn.danger.delete{:type => "button"}= t(".delete_choised_files")
            %input.toggle{:type => "checkbox"}
        
        %br
          .row
            .span16
              %table.zebra-striped
                %thead
                  %tr
                    %th(width="15%")
                    %th(width="35%")
                    %th(width="8%")
                    %th(width="10%")
                    %th(width="10%")
                    %th(width="12%")
                %tbody.files


- content_for :javascript do
  = render "partials/jquery_fileupload_tmpl_new"