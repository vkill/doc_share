
= search_form_for @q, :url => [:account, :repositories] do |f|
  .row
    .span14
      .row
        .span7.clearfix
          = f.label :name, :class => "span2"
          = f.text_field :name_cont, :class => "span4"
    .span2
      = f.submit t(:to_search), :class => "btn primary"

%section
  .row
    .span16
      = render @repositories

      = render 'partials/pagination', :resources => @repositories