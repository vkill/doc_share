%section
  %ul.tabs(data-tabs="tabs")
    
    %li{:class => @main_nav == :dashboard ? :active : nil}
      = link_to t(".dashboard"), dashboard_path
    
    %li{:class => @main_nav == :profile ? :active : nil}
      = link_to t(".profile"), edit_profile_path
        
    %li.dropdown{"data-dropdown" => "dropdown", :class => @main_nav == :messages ? :active : nil}
      %a.dropdown-toggle{:href => "javascript:void(0)"}= t(".messages")
      %ul.dropdown-menu
        %li
          = link_to t(".new_message"), [:new, :account, :message]
        %li
          = link_to t(".sent_messages"), [:sent, :account, :messages]
        %li
          = link_to t(".received_messages"), [:account, :messages]
        %li
          = link_to t(".notifications"), [:notifications, :account, :messages]

    %li{:class => @main_nav == :notifications_center ? :active : nil}
      = link_to t(".notifications_center"), account_notifications_center_path

