.page-header
  %h2
    = @message.subject

.row
  .page-header
    .row
      %p.pull-right
        = link_to t(:delete), [:account, @message], :method => :delete, :confirm => t(:delete_confirm)
    .row
      .offset1
        %p
          = @message.content

        .page-header
          = render "form_reply", :message => @message, :new_message => @new_message

