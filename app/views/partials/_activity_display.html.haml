/activity

- case activity.action.to_sym
- when :created_repository, :destroyed_repository, :watched_repository, :unwatched_repository, :forked_repository
  = link_to activity.username, user_page_path(activity.username)
  = activity.action_text
  = render "partials/repository/link", :repository => activity.target
  = t(:at, :scope => [:web, :page, :activity], :ago => time_ago_in_words(activity.created_at))
- when :followed_user, :unfollowed_user
  = link_to activity.username, user_page_path(activity.username)
  = activity.action_text
  = link_to activity.target.username, user_page_path(activity.target.username)
  = t(:at, :scope => [:web, :page, :activity], :ago => time_ago_in_words(activity.created_at))
- else
  = link_to activity.username, user_page_path(activity.username)
  = activity.action_text
  = t(:at, :scope => [:web, :page, :activity], :ago => time_ago_in_words(activity.created_at))

