/ repository

- if logged_in?
  - unless owner?(repository)
    - if current_user.watching_repository?(repository)
      - @original_text = t(:unwatch, :scope => [:web, :page, :repository])
    - else
      - @original_text = t(:watch, :scope => [:web, :page, :repository])

    = link_to @original_text,
              user_repository_reverse_watch_path(repository.username, repository.name),
              :method => :put,
              :remote => true,
              :data => { "repository_reverse_watch_#{repository.id}" => true,
                          :buttons => true,
                          :loading_text => t(:requesting),
                          :timeout_text => t(:request_timeout),
                          :server_error_text => t(:request_server_error),
                          :alerts_containers_div => "alerts",
                          :watch_complete_text => t(:unwatch, :scope => [:web, :page, :repository]),
                          :unwatch_complete_text => t(:watch, :scope => [:web, :page, :repository])},
              :class => "btn small primary"

- else
  = render "partials/modals/sign_in", :text => t(:watch, :scope => [:web, :page, :repository])

