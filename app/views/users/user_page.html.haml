= render "head", :user => @user

.page-header
  .row
    .span8
      = render "partials/user/details", :user => @user
    .span8
      %p
        = render "partials/user/count_link", :user => @user
      %br
      %p
        = render "partials/user/following_link", :user => @user

%br
.page-header
  .row
    .span8
      .page-header
        %h3= t(".latest_public_repositories", :username => @user.username)
      .row
        .span8
          - @latest_public_repositories.each do |public_repository|
            .page-header
              .row
                .span8
                  
    .span8
      .page-header
        %h3= t(".latest_activities", :username => @user.username)
      .row
        .span8
          - @latest_activities.each do |activity|
            %br
            .page-header
              = render "partials/activity_display", :activity => activity
