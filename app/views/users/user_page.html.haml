= render "head", :user => @user

%section
  .row
    .span8
      .row
        .span2
          %p= ta(User, :username)
          %p= ta(User, :site)
          %p= ta(User, :join_at)
        .span6
          %p= @user.username
          %p= @user.site
          %p= l @user.created_at, :format => :long_only_date
    .span7.offset1
      %p
        = render "count_link", :user => @user
      %br
      %p
        %span
          = t(".following",
                  :following_users_count => @user.following_users_count,
                  :watching_repositories_count => @user.watching_repositories_count)
        %span
          = link_to t("view_all"), user_following_path(@user.username)

.page-header

%section
  .row
    .span8
      .page-header
        %h3= t(".latest_repositories", :username => @user.username)
      .row
        .span8
          = render @latest_repositories

        %p.pull-right
          = link_to t(:more), user_repositories_path(@user)
  
    .span7.offset1
      .page-header
        %h3= t(".latest_activities", :username => @user.username)
      .row
        .span7
          = render @latest_activities
