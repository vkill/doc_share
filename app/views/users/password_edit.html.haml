%h2 Edit your password

= simple_form_for(@user, :url => password_update_user_path(@user), :wrapper => :inline) do |f|

  = render "partials/simple_form_error_notification", :f => f

  = field_set_tag "" do
    = f.input :current_password, :required => true, :autofocus => true, :input_html => { :class => "span4" }
    = f.input :password, :required => true, :input_html => { :class => "span4" }
    = f.input :password_confirmation, :required => true, :input_html => { :class => "span4" }


  .actions
    = f.button :submit, t(:update_password, :scope => [:simple_form, :actions, :submit, :user]),
                          :class => 'primary', :disable_with => t(:submitting)
    = button_tag t(:reset), :type => :reset, :class => "btn"

