%h2 Edit your password
= simple_form_for(@user, :url => password_update_user_path(@user), :html => { :method => :put }, :wrapper => :inline) do |f|
  - if f.error_notification
    .alert-message.warning.fade.in(data-alert="alert")
      %a(class="close" href="#") Ã—
      %p
        = f.error_notification

  = field_set_tag "" do
    = f.input :current_password, :required => true, :autofocus => true, :input_html => { :class => "span4" }
    = f.input :password, :required => true, :autofocus => true, :input_html => { :class => "span4" }
    = f.input :password_confirmation, :required => true, :autofocus => true, :input_html => { :class => "span4" }


  .actions
    = f.button :submit, "Update", :class => 'primary'
    = button_tag 'Cancel', :type => :reset, :class => "btn"

