.row
  .span12
    %h1
      = link_to (image_tag user.gravatar_url(:size => 48), :class => "gravatar"),
                "http://gravatar.com/emails/"
      = user.username
  .span4
    - if logged_in?
      - if me?(user)
        = render_cell :profile, :edit_link
      - else
        = mail_to user.email,
              t(".send_email"),
              :class => "btn small primary"

        = link_to t(".send_message"),
              new_account_message_path(:receiver_username => user.username),
              :class => "btn small primary"

        = link_to (current_user.following_user?(user) ? t(".unfollow") : t(".follow")),
                  user_reverse_follow_path(user.username),
                  :method => :put,
                  :remote => true,
                  :data => { "user_reverse_follow_#{user.id}" => true,
                              :buttons => true,
                              :loading_text => t(:requesting),
                              :timeout_text => t(:request_timeout),
                              :server_error_text => t(:request_server_error),
                              :alerts_containers_div => "alerts",
                              :follow_complete_text => t(".unfollow"),
                              :unfollow_complete_text => t(".follow")},
                  :class => "btn small primary"

    - else
      - [ t(".send_email"), t(".send_message"), t(".follow")].each do |text|
        = link_to text,
                  "javascript:void(0);",
                  :class => "btn small",
                  :rel => "twipsy",
                  :data => { :backdrop => 'true', :controls_modal => "modal-sign-in", :keyboard => 'true',
                              :original_title => t(:require_sign_in), :placement => :below}

- content_for :popover do
  = render_cell "bootstrap_::_twipsy_title", :change_gravatar
- content_for :modal do
  = render_cell "bootstrap_::_controls_modal", :sign_in

.page-header

